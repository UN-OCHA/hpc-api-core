{
  "name": "@unocha/hpc-api-core",
  "version": "9.0.0",
  "description": "Core libraries supporting HPC.Tools API Backend",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "check-types": "tsc --noEmit",
    "prepare": "[ -d .git ] && git config blame.ignoreRevsFile .git-blame-ignore-revs; husky",
    "reinstall": "rm -rf node_modules/ && yarn",
    "lint-prettier": "prettier -c .",
    "lint-eslint": "eslint --quiet .",
    "lint": "yarn lint-prettier && yarn lint-eslint"
  },
  "engines": {
    "node": ">=18.18.2 || >=20.9.0",
    "yarn": ">=1.22.10"
  },
  "dependencies": {
    "@types/lodash": "^4.17.7",
    "@types/node-fetch": "2.6.11",
    "fp-ts": "^2.14.0",
    "io-ts": "2.2.20",
    "knex": "3.1.0",
    "lodash": "^4.17.21",
    "node-fetch": "2.7.0",
    "pg": "^8.12.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.3",
    "@types/pg": "^8.11.8",
    "@unocha/hpc-repo-tools": "^5.0.0",
    "eslint": "^9.9.1",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --check",
      "eslint"
    ],
    "*.{js,jsx,ts,tsx,md,json}": "prettier --check"
  }
}
